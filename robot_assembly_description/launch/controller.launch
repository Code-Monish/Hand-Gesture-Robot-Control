<launch>

<rosparam file="$(find robot_assembly_description)/launch/controller.yaml" command="load"/>
<node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="robot_assembly" args="Revolute 2_position_controller Slider 3_position_controller Revolute 4_position_controller joint_state_controller "/>
<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
  <remap from="/joint_states" to="/robot_assembly/joint_states"/>
</node>

</launch>